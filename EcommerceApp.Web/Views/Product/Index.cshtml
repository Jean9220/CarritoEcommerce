@model IEnumerable<Ecommerce.Domain.Entities.Product>

@{
    ViewData["Title"] = "Productos";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Price)</th>
            <th>@Html.DisplayNameFor(m => m.First().CategoryId)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.CategoryId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ProductId">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
